{
  "name": "kaleidoscopia",
  "version": "1.0.0",
  "description": "use the 2d space groups to generate 2d kaleidoscope patterns",
  "main": "./src/index.js",
  "scripts": {
    "start": "budo . -d --serve bundle.js --live",
    "build": "browserify . -o bundle.js -g uglifyify",
    "test": "browserify test.js | smokestack | tap-spec",
    "dist": "mkdir -p dist && bash -c 'cp *.{js,html,css} dist'",
    "push": "gh-pages -d dist",
    "deploy": "npm run build && npm run dist && npm run push"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/topological-ragnar/kaleidoscopia"
  },
  "author": "topological-ragnar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/topological-ragnar/kaleidoscopia/issues"
  },
  "homepage": "https://github.com/topological-ragnar/kaleidoscopia",
  "dependencies": {
    "dat.gui": "^0.7.6",
    "jquery": "^2.2.3",
    "raf-loop": "^1.1.3",
    "randomcolor": "^0.4.4",
    "three": "^0.76.1",
    "three-fly-controls": "^1.1.0",
    "three-orbit-controls": "^72.0.0",
    "three-window-resize": "^1.0.4"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^10.0.0",
    "browserify": "^10.0.0",
    "budo": "^4.0.0",
    "gh-pages": "^0.3.0",
    "smokestack": "^3.3.0",
    "tap-spec": "^4.0.2",
    "tape": "^4.0.0",
    "uglifyify": "^3.0.1",
    "watchify": "^3.1.0"
  }
}
